@model nhibernate_demo.Models.ChocolateBar

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.tag.editor-min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#features").tagEditor();
    });
</script>


@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>ChocolateBar</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            Chocolatier
        </div>
        <div class="editor-field">
            @Html.EditorFor(model =>  model.Chocolatier)
        </div>

        <div class="editor-label">
            Features
        </div>
        <div class="editor-field">
            @Html.TextBox("features", "", new { id = "features" })
        </div>


        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

